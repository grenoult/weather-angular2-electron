{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,"typeRoots": [
			"../node_modules/@types"
		],
		"types" : [
			"core-js",
			"node"
		],
		"noStrictGenericChecks": true
	},
	"exclude": [
		"node_modules"
	]
}
